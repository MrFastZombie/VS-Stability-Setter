{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client (Debug)",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:VINTAGE_STORY_DEV}/Vintagestory.exe",
            "linux": {
                "program": "${env:VINTAGE_STORY_DEV}/Vintagestory"
            },
            "osx": {
                "program": "${env:VINTAGE_STORY_DEV}/Vintagestory"
            },
            "preLaunchTask": "build",
            "args": [
                // "--playStyle" , "preset-surviveandbuild",
                // "--openWorld" , "modding test world",
                "--tracelog",
                "--addModPath",
                "${workspaceFolder}/VS-Stability-Setter/bin/Debug/Mods",
                "--addOrigin",
                "${workspaceFolder}/VS-Stability-Setter/assets",
                "--dataPath",
                "${env:VINTAGE_STORY_DEV_DATA}"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch Server",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:VINTAGE_STORY_DEV}/VintagestoryServer.exe",
            "linux": {
                "program": "${env:VINTAGE_STORY_DEV}/VintagestoryServer"
            },
            "osx": {
                "program": "${env:VINTAGE_STORY_DEV}/VintagestoryServer"
            },
            "preLaunchTask": "build",
            "args": [
                "--tracelog",
                "--addModPath",
                "${workspaceFolder}/VS-Stability-Setter/bin/Debug/Mods",
                 "--addOrigin",
                 "${workspaceFolder}/VS-Stability-Setter/assets",
                 "--dataPath",
                "${env:VINTAGE_STORY_DEV_DATA}"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "CakeBuild",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Cake)",
            "program": "${workspaceFolder}/CakeBuild/bin/Debug/net8.0/CakeBuild.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CakeBuild",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}